{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:@typescript-eslint/recommended-type-checked",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "indent": ["error", 2], // отступ в 2 пробела
    "semi": ["error", "always"],
    "comma-spacing": ["error", { "before": false, "after": true }],
    "no-console": "off"
    // Добавьте или измените другие правила по вашему усмотрению
  }
}
